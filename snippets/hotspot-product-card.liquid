<a href='{{product.url}}' class='hotspot-product-card'>
  <div class='hotspot-product-card--image-wrapper'>
    {% render 'responsive-image', desktopImage: product.featured_image %}
  </div>
  <div class='hotspot-product-card--content flex flex-col items-center gap-3'>
    <div class='title'>{{ product.title }}</div>
    {% if product.metafields.custom.rating != blank %}
      <div class='rating'>{{ product.metafields.custom.rating }}</div>
    {% endif %}

    {% if product.compare_at_price == blank %}
      <div class='flex gap-3 price-container'>
        <span>From</span>
        <div class='price'>{{ product.price | money_with_currency }} INR</div>
      </div>
    {% else %}
      <div class='flex gap-3 discount-container'>
        <div class='price'>{{ product.price | money_with_currency }}</div>
        <div class='compare_at_price'>{{ product.compare_at_price | money_with_currency }}</div>
      </div>
    {% endif %}
  </div>
</a>
