{% liquid
  assign background_color = product.background
  assign border_color = product.background | color_darken: 65
%}

<div
  class="collection-card-wrapper w-full fade-in-slide-up {{ class }}"
  style="
    background-color:{{ background_color }};
    border-color:{{ border_color }};
    --border-color-hidden:{{ border_color }};
    --animation-delay:{{ forloop.index | times:0.08 }}s;
  "
>
  <div class="heading-wrapper">
    <h4>
      {{ product.heading }}
    </h4>
  </div>
  <div class="images-container">
    {% if product['image-1'] %}
      <img
        src="{{ product['image-1'] | image_url }}"
        alt="{{ product.heading }} Image 1"
        width="100%"
        height="100%"
      >
    {% endif %}
    {% if product['image-2'] %}
      <img
        src="{{ product['image-2'] | image_url }}"
        alt="{{ product.heading }} Image 2"
        width="100%"
        height="100%"
      >
    {% endif %}
    {% if product['image-3'] %}
      <img
        src="{{ product['image-3'] | image_url }}"
        alt="{{ product.heading }} Image 3"
        width="100%"
        height="100%"
      >
    {% endif %}
  </div>
  <p class="collection-description">{{ product.description }}</p>
</div>
