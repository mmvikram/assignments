{% if rating != blank and rating != 0 %}
  <div class='flex gap-2 items-center'>
    <div class='flex gap-1 '>
      {% for item in (1..5) %}
        {% if item <= rating %}
          {% render 'icon-star', color: '#F5C142' %}
        {% else %}
          {% render 'icon-star', color: '#f1f1f1' %}
        {% endif %}
      {% endfor %}
    </div>
    {{ rating }}
  </div>
{% endif %}
