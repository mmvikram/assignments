<style>
  {% assign gap_sizes = "0,1,2,3,4,5,6,8,10" | split: "," %}

  {% for size in gap_sizes %}
    .gap-{{ size }} {
      gap: {{ size | times: 0.25 }}rem;
    }

    .mr-{{ size }} {
      margin-right: {{ size | times: 0.25 }}rem;
    }

    .ml-{{ size }} {
      margin-left: {{ size | times: 0.25 }}rem;
    }

    .mt{{ size }} {
      margin-top: {{ size | times: 0.25 }}rem;
    }

    .mb-{{ size }} {
      margin-bottom: {{ size | times: 0.25 }}rem;
    }

    .mx-{{ size }} {
      margin-inline: {{ size | times: 0.25 }}rem;
    }

    .my-{{ size }} {
      margin-block: {{ size | times: 0.25 }}rem;
    }

  {% endfor %}
</style>
